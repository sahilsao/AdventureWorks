@page "/"
@page "/person/login"

@using AdventureWorks.Components.Layout
@using Icons = Microsoft.FluentUI.AspNetCore.Components.Icons
@layout EmptyLayout

<PageTitle>Person Login</PageTitle>

<FluentGrid Style="margin-top: 250px;" Justify="JustifyContent.FlexEnd" AdaptiveRendering=true>
	<FluentGridItem sm="12" xs="12" lg="4" md="4">
		<FluentCard>
			<FluentHeader>
				Login
			</FluentHeader>
			<br />

			<FluentStack Orientation="Orientation.Horizontal" HorizontalAlignment="HorizontalAlignment.Right" VerticalGap="10">
				<FluentLabel Typo=Typography.H5 Weight=FontWeight.Bold MarginBlock="30px">
					adventure-works\
				</FluentLabel>
				<FluentTextField @bind-Value="userid" TextFieldType="TextFieldType.Text" Placeholder="Enter Your User ID">User Id</FluentTextField>
			</FluentStack>


			<FluentStack Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.Right" VerticalGap="10">
				<FluentTextField @bind-Value=password TextFieldType="TextFieldType.Password" Placeholder="Enter Your Password">Password</FluentTextField>
			</FluentStack>
			<br />
			<FluentStack Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.End" VerticalGap="20">
				<FluentButton IconStart="@(new Icons.Regular.Size16.Person())"
							  Appearance="Appearance.Accent"
							  Loading="@loading"
							  OnClick="@StartLoadingAsync">
					Login
				</FluentButton>
			</FluentStack>
		</FluentCard>
	</FluentGridItem>
</FluentGrid>

@code {

	string? userid, password;

	bool loading = false;

	async Task StartLoadingAsync()
	{
		loading = true;
		await Task.Delay(2000);
		loading = false;
	}
}
